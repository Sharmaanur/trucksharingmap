<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:scrollbars="none"
    android:orientation="vertical"
    tools:context=".NewOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <EditText
        android:id="@+id/receiver_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reciver Name"/>
    <TextView
        android:id="@+id/title_pickup_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/ic_baseline_calendar_month_24"
        android:textColor="@color/black"
        android:text="Pickup date :"/>

    <CalendarView
        android:id="@+id/calender_view"
        android:layout_gravity="right"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title_pickup_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/ic_baseline_timer_24"
        android:textColor="@color/black"
        android:text="Pickup Time :"/>



        <EditText
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:id="@+id/ed_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pickup Location"/>
        <EditText
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:id="@+id/ed_droplocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Drop off Location"/>

<Button
    android:id="@+id/btn_next"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Next"/>

    </LinearLayout>
</ScrollView>